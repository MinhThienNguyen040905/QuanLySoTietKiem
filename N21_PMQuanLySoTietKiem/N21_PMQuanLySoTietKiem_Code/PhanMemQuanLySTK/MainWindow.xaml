<Window x:Class="PhanMemQuanLySTK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PhanMemQuanLySTK"
        mc:Ignorable="d"
        Icon="photo/Logo.png"
        Loaded="MainWindow_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="Phần Mềm Quản Lý Sổ Tiết Kiệm" Width="1960" Height="960"
        >
    <StackPanel>
        <Border x:Name="bd_Thoat" Height="20" Background="#DFF4E3" BorderBrush="Transparent">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="White" x:Name="btn_Minimize" Cursor="Hand" MouseDown="btn_Minimize_MouseDown" MouseLeave="btn_MouseLeave" MouseEnter="btn_Minimize_MouseEnter">
                        <materialDesign:PackIcon Background="Transparent" BorderBrush="Transparent" Kind="WindowMinimize" Height="10" Width="45" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 5 0 0"/>
                    </Border>
                    <Border Background="White" x:Name="btn_Close"  Cursor="Hand" MouseDown="btn_Close_MouseDown" MouseEnter="btn_Close_MouseEnter" MouseLeave="btn_MouseLeave">
                        <materialDesign:PackIcon Background="Transparent" BorderBrush="Transparent" Kind="Close" Height="15" Width="45" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        <ContentControl x:Name="DangNhap" Height="800" BorderBrush="Transparent"/>
    </StackPanel>
</Window>
